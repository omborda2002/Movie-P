<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>Inner Page</title>
    <!-- CSS only -->
    <link rel="stylesheet" href="/inner.css" />
    <link rel="shortcut icon" type="image/png" href="/Asset3.png"/>
    <!-- TODO: Head-links -->
    <%- include("partials/links") %>
  </head>

  <body>
    <!-- Start your project here-->
    <div class="container-sm">
      <!-- NAVBAR here-- -->
      <%- include("partials/navbar") %>

      <!-- TODO: INNER-PLACE FIXING -->
      <div id="page" class="home_h1">
        <div id="content_box">
          <!-- TODO: Movie Heading -->
          <div class="head">
            <div class="movie_name">
              <h1><%= datam.name %></h1>
              <p>
                <%= datam.year %> <i class="bi bi-dot"></i>U
                <% if(type == "movie"){%>
                  <i
                    class="bi bi-dot"
                  ></i
                  ><%=datam.other.length %>
                <%} else {%>
                  <i
                    class="bi bi-dot"
                  ></i
                  > Episode : <%=datam.episodes%>
                <%}%>
              </p>
            </div>
            <div class="starRating">
              <p>IMDB RATING</p>
              <div class="starLine">
                <i class="fas fa-star"></i>
                <div class="rate">
                  <p><b style="color: white"><%= datam.imdb %> </b>/10</p>
                  <p>65K</p>
                </div>
              </div>
            </div>
          </div>

          <!-- TODO: title posts-->
          <div class="post_title">
            <img src="<%= datam.post_ss %> " alt="" />
            <div class="white_head">
              <div class="more_info">
                <div class="rect"></div>
                <p style="color: black">
                  MORE INFO
                  <i style="margin-left: 10px" class="bi bi-cloud-download"></i>
                </p>
              </div>
              <div class="information">
                <div class="info_section">
                  <span> Full Name </span>
                  <svg
                    width="24"
                    height="24"
                    xmlns="http://www.w3.org/2000/svg"
                    class="
                      ipc-icon ipc-icon--chevron-right-inline ipc-icon--inline
                      ipc-title-link-chevron
                      ipc-title--nomargin
                    "
                    viewBox="0 0 24 24"
                    fill="currentColor"
                    role="presentation"
                  >
                    <path
                      d="M5.622.631A2.153 2.153 0 0 0 5 2.147c0 .568.224 1.113.622 1.515l8.249 8.34-8.25 8.34a2.16 2.16 0 0 0-.548 2.07c.196.74.768 1.317 1.499 1.515a2.104 2.104 0 0 0 2.048-.555l9.758-9.866a2.153 2.153 0 0 0 0-3.03L8.62.61C7.812-.207 6.45-.207 5.622.63z"
                    ></path>
                  </svg>
                  <p><%= datam.name %></p>
                </div>
                <div class="info_section">
                  <span>Language</span>
                  <svg
                    width="24"
                    height="24"
                    xmlns="http://www.w3.org/2000/svg"
                    class="
                      ipc-icon ipc-icon--chevron-right-inline ipc-icon--inline
                      ipc-title-link-chevron
                      ipc-title--nomargin
                    "
                    viewBox="0 0 24 24"
                    fill="currentColor"
                    role="presentation"
                  >
                    <path
                      d="M5.622.631A2.153 2.153 0 0 0 5 2.147c0 .568.224 1.113.622 1.515l8.249 8.34-8.25 8.34a2.16 2.16 0 0 0-.548 2.07c.196.74.768 1.317 1.499 1.515a2.104 2.104 0 0 0 2.048-.555l9.758-9.866a2.153 2.153 0 0 0 0-3.03L8.62.61C7.812-.207 6.45-.207 5.622.63z"
                    ></path>
                  </svg>
                  <p><%= datam.language %></p>
                </div>
                <div class="info_section">
                  <span>Subtitles</span>
                  <svg
                    width="24"
                    height="24"
                    xmlns="http://www.w3.org/2000/svg"
                    class="
                      ipc-icon ipc-icon--chevron-right-inline ipc-icon--inline
                      ipc-title-link-chevron
                      ipc-title--nomargin
                    "
                    viewBox="0 0 24 24"
                    fill="currentColor"
                    role="presentation"
                  >
                    <path
                      d="M5.622.631A2.153 2.153 0 0 0 5 2.147c0 .568.224 1.113.622 1.515l8.249 8.34-8.25 8.34a2.16 2.16 0 0 0-.548 2.07c.196.74.768 1.317 1.499 1.515a2.104 2.104 0 0 0 2.048-.555l9.758-9.866a2.153 2.153 0 0 0 0-3.03L8.62.61C7.812-.207 6.45-.207 5.622.63z"
                    ></path>
                  </svg>
                  <p>Yes (English)</p>
                </div>
                <div class="info_section">
                  <span>Size</span>
                  <svg
                    width="24"
                    height="24"
                    xmlns="http://www.w3.org/2000/svg"
                    class="
                      ipc-icon ipc-icon--chevron-right-inline ipc-icon--inline
                      ipc-title-link-chevron
                      ipc-title--nomargin
                    "
                    viewBox="0 0 24 24"
                    fill="currentColor"
                    role="presentation"
                  >
                    <path
                      d="M5.622.631A2.153 2.153 0 0 0 5 2.147c0 .568.224 1.113.622 1.515l8.249 8.34-8.25 8.34a2.16 2.16 0 0 0-.548 2.07c.196.74.768 1.317 1.499 1.515a2.104 2.104 0 0 0 2.048-.555l9.758-9.866a2.153 2.153 0 0 0 0-3.03L8.62.61C7.812-.207 6.45-.207 5.622.63z"
                    ></path>
                  </svg>
                  <p>300MB,1GB,2.5GB</p>
                </div>
                <div class="info_section">
                  <span>Quality</span>
                  <svg
                    width="24"
                    height="24"
                    xmlns="http://www.w3.org/2000/svg"
                    class="
                      ipc-icon ipc-icon--chevron-right-inline ipc-icon--inline
                      ipc-title-link-chevron
                      ipc-title--nomargin
                    "
                    viewBox="0 0 24 24"
                    fill="currentColor"
                    role="presentation"
                  >
                    <path
                      d="M5.622.631A2.153 2.153 0 0 0 5 2.147c0 .568.224 1.113.622 1.515l8.249 8.34-8.25 8.34a2.16 2.16 0 0 0-.548 2.07c.196.74.768 1.317 1.499 1.515a2.104 2.104 0 0 0 2.048-.555l9.758-9.866a2.153 2.153 0 0 0 0-3.03L8.62.61C7.812-.207 6.45-.207 5.622.63z"
                    ></path>
                  </svg>
                  <p>480p,720p,1080p,WeB-HD</p>
                </div>
              </div>
            </div>
          </div>
          <div class="ss_main">
            <div class="ss_inner">
              <div class="ss_lable">
                <h1>Screen Shots</h1>
                <svg
                  width="24"
                  height="24"
                  xmlns="http://www.w3.org/2000/svg"
                  class="
                    ipc-icon ipc-icon--chevron-right-inline ipc-icon--inline
                    ipc-title-link-chevron
                    ipc-title--nomargin
                  "
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  role="presentation"
                >
                  <path
                    d="M5.622.631A2.153 2.153 0 0 0 5 2.147c0 .568.224 1.113.622 1.515l8.249 8.34-8.25 8.34a2.16 2.16 0 0 0-.548 2.07c.196.74.768 1.317 1.499 1.515a2.104 2.104 0 0 0 2.048-.555l9.758-9.866a2.153 2.153 0 0 0 0-3.03L8.62.61C7.812-.207 6.45-.207 5.622.63z"
                  ></path>
                </svg>
              </div>
              <div class="ss_images">
                <% for(let ss of datam.ss_url){ %>
                <img src=" <%=ss%>" alt="" srcset="" />
                <%}%>
              </div>
            </div>
          </div>

          <!-- TODO: Download section -->

          <div class="download_btn">
            <!-- lable -->
            <div class="download_lable">
              <h1>Download</h1>
              <svg
                width="24"
                height="24"
                xmlns="http://www.w3.org/2000/svg"
                class="
                  ipc-icon ipc-icon--chevron-right-inline ipc-icon--inline
                  ipc-title-link-chevron
                  ipc-title--nomargin
                "
                viewBox="0 0 24 24"
                fill="currentColor"
                role="presentation"
              >
                <path
                  d="M5.622.631A2.153 2.153 0 0 0 5 2.147c0 .568.224 1.113.622 1.515l8.249 8.34-8.25 8.34a2.16 2.16 0 0 0-.548 2.07c.196.74.768 1.317 1.499 1.515a2.104 2.104 0 0 0 2.048-.555l9.758-9.866a2.153 2.153 0 0 0 0-3.03L8.62.61C7.812-.207 6.45-.207 5.622.63z"
                ></path>
              </svg>
            </div>
            <div class="download_area">
              <div class="resolution_wise">
                <p><%=datam.name%> (<%=datam.language%>) - 480P</p>
                <div class="downloading">
                  <a href="http://cloudfair.tech/<%=datam.name%>" target="_blank">
                    <button type="button" class="btn">
                      Download <i class="bi bi-download"></i>
                    </button>
                  </a>
                </div>
              </div>
              <div class="resolution_wise">
                <p><%=datam.name%> (<%=datam.language%>) - 720P</p>
                <div class="downloading text-center">
                  <a href="http://cloudfair.tech/<%=datam.name%>" target="_blank">
                    <button type="button" class="btn">
                      Download <i class="bi bi-download"></i>
                    </button>
                  </a>
                </div>
              </div>
              <div class="resolution_wise">
                <p><%=datam.name%> (<%=datam.language%>) - 1080P</p>
                <div class="downloading text-center">
                  <a href="http://cloudfair.tech/<%=datam.name%>" target="_blank">
                    <button type="button" class="btn">
                      Download <i class="bi bi-download"></i>
                    </button>
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- FIXME: Screen Shot-->

          <div class="random_posts">
            <div class="random_lable">
              <h1>Other Movies</h1>
              <svg
                width="24"
                height="24"
                xmlns="http://www.w3.org/2000/svg"
                class="
                  ipc-icon ipc-icon--chevron-right-inline ipc-icon--inline
                  ipc-title-link-chevron
                  ipc-title--nomargin
                "
                viewBox="0 0 24 24"
                fill="currentColor"
                role="presentation"
              >
                <path
                  d="M5.622.631A2.153 2.153 0 0 0 5 2.147c0 .568.224 1.113.622 1.515l8.249 8.34-8.25 8.34a2.16 2.16 0 0 0-.548 2.07c.196.74.768 1.317 1.499 1.515a2.104 2.104 0 0 0 2.048-.555l9.758-9.866a2.153 2.153 0 0 0 0-3.03L8.62.61C7.812-.207 6.45-.207 5.622.63z"
                ></path>
              </svg>
            </div>
            <% let rand1,rand2; %> <% rand1 = Math.floor(Math.random()*10);%> <%
            rand2 = Math.floor(Math.random()*10+10);%> <% for(let i = 0; i <
            2;i++) { %>
            <section class="other_movies_head">
              <a
                href="http://moviecity.tech/inner/<%= data[rand1].name %> "
                class="images_post"
              >
                <img src="<%= data[rand1].post_ss %>" alt="" srcset="" />
                <div class="name_otherPosts p-4">
                  <div class="post_infor">
                    <h2 style="text-shadow: #fc0 1px 0 10px">
                      <%= data[rand1].name %> (<%= data[rand1].year %>)
                    </h2>
                    <hr />
                    <div
                      class="imdb_rateing justify-center"
                      style="align-items: center"
                    >
                      <i
                        class="fas fa-star"
                        style="color: rgb(244, 197, 24); margin-right: 1%"
                      ></i>
                      <h3 style="margin: 0px">
                        <%= data[rand1].imdb %><span style="color: #555555"
                          >/10</span
                        >
                      </h3>
                    </div>
                    <hr />
                    <h3>Dual-audio {Hindi-English}</h3>
                    <hr />
                    <h3>480P-720P-1080P</h3>
                    <hr />
                    <h3>300MB,1GB,2.5GB</h3>
                  </div>
                </div>
              </a>
              <div style="width: 2%; height: auto"></div>
              <a
                href="http://moviecity.tech/inner/<%= data[rand2].name %> "
                class="images_post"
              >
                <img
                  width="284"
                  height="420"
                  src="<%= data[rand2].post_ss %>"
                  alt=""
                  srcset=""
                />
                <div class="name_otherPosts p-4">
                  <div class="post_infor">
                    <h2 style="text-shadow: #fc0 1px 0 10px">
                      <%= data[rand2].name %> (<%= data[rand2].year %>)
                    </h2>
                    <hr />
                    <div
                      class="imdb_rateing justify-center"
                      style="align-items: center"
                    >
                      <i
                        class="fas fa-star"
                        style="color: rgb(244, 197, 24); margin-right: 1%"
                      ></i>
                      <h3 style="margin: 0px">
                        <%= data[rand2].imdb %><span style="color: #555555"
                          >/10
                        </span>
                      </h3>
                    </div>
                    <hr />
                    <h3>Dual-audio {Hindi-English}</h3>
                    <hr />
                    <h3>480P-720P-1080P</h3>
                    <hr />
                    <h3>300MB,1GB,2.5GB</h3>
                  </div>
                </div>
              </a>
            </section>
            <% rand1++;rand2++; %> <% } %>
          </div>

          <!-- FIXME: Screen Shot-->
        </div>
      </div>

      <!-- TODO: FOOTER HERE -->
      <div class="foooter">
        <% let d = new Date(); let year = d.getFullYear(); %>
        <p>MOVIECITY.TECH © <%=year%></p>
      </div>
    </div>

    <!-- JavaScript links -->
    <%- include('partials/js_links') %>
  </body>
</html>
